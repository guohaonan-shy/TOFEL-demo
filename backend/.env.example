# ===========================================
# TOEFL Speaking Backend - Environment Config
# ===========================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# -----------------------------
# Application
# -----------------------------
APP_NAME=TOEFL Speaking Backend
DEBUG=true

# -----------------------------
# Database (PostgreSQL)
# -----------------------------
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://toefl:toefl123@localhost:5432/toefl_speaking

# -----------------------------
# Object Storage (MinIO)
# -----------------------------
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_SECURE=false
MINIO_BUCKET_QUESTIONS=toefl-questions
MINIO_BUCKET_RECORDINGS=toefl-recordings

# -----------------------------
# AI Services (Volcengine/Doubao)
# -----------------------------
# Get your API keys from: https://console.volcengine.com/
VOLCENGINE_API_KEY=your_api_key_here
VOLCENGINE_ACCESS_KEY=your_access_key_here
VOLCENGINE_SECRET_KEY=your_secret_key_here

# -----------------------------
# CORS (Frontend Origins)
# -----------------------------
# Comma-separated list of allowed origins
# Default: http://localhost:5173,http://localhost:5174
CORS_ORIGINS=["http://localhost:5173", "http://localhost:5174"]
